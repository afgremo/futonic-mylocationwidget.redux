<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    style="@style/AppWidgetClassic.Clickable">

    <ProgressBar android:id="@+id/WorkingIndicatorProgressBar"
        android:layout_width="@dimen/use_weight"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle"
        android:layout_margin="8dp"
        style="@android:style/Widget.ProgressBar.Inverse" />
        
	<LinearLayout android:id="@+id/DetailLinearLayout"
        android:layout_width="@dimen/use_weight"
        android:layout_weight="5"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="8dip"
        android:paddingRight="8dip">

        <TextView android:id="@+id/TitleTextView"
            style="@style/AWCText.Important"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/DescriptionTextView"
            style="@style/AWCText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
