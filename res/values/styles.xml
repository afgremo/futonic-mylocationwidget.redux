<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="WhiteIndeterminateProgressBar" parent="@android:style/Widget.ProgressBar">
	    <item name="android:indeterminate">true</item>
	    <item name="android:indeterminateBehavior">cycle</item>
    </style>
    
    <style name="WidgetTextTicker">
	    <item name="android:measureAllChildren">true</item>
	    <item name="android:flipInterval">10000</item>
	    <item name="android:autoStart">true</item>
	    <item name="android:inAnimation">@android:anim/fade_in</item>
	    <item name="android:outAnimation">@android:anim/fade_out</item>
	    <item name="android:animateFirstView">true</item>
    </style>
    
    <style name="WidgetTextTicker.Fast">
	    <item name="android:flipInterval">750</item>
    </style>
    
	<style name="NoChrome">
	    <item name="android:layout_margin">0dp</item>
	    <item name="android:padding">0dp</item>
	    <item name="android:background">@android:color/transparent</item>
    </style>
    
	<style name="StaticMapTitle">
	    <item name="android:textSize">12sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="StaticMapTitle.Large">
	    <item name="android:textSize">16sp</item>
	</style>
	
	<style name="StaticMapTitleOverlay">
	    <item name="android:padding">4dp</item>
	    <item name="android:background">#80000000</item>
	    <item name="android:orientation">vertical</item>
	</style>
	
	<style name="StaticMapTitleOverlay.Large">
	    <item name="android:padding">8dp</item>
	</style>
	
	<style name="SpringView">
	    <item name="android:layout_weight">1</item>
	</style>
	
	<style name="SpringView.Horizontal">
	    <item name="android:layout_width">@dimen/use_weight</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="SpringView.Vertical">
	    <item name="android:layout_height">@dimen/use_weight</item>
	    <item name="android:layout_width">wrap_content</item>
	</style>
</resources>
